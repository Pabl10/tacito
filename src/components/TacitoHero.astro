---
import { assetUrl } from "../utils/paths";
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background texture -->
  <div 
    class="absolute inset-0"
    style={`background-image: url('${assetUrl("/test-1.jpg")}'); background-size: cover; background-position: center;`}
  />
  
  <!-- Content -->
  <div class="relative z-10 text-center px-6 max-w-5xl mx-auto">
    <h1 class="text-3xl md:text-5xl text-gray-800 mb-6 leading-tight font-bold">
      Diseñamos marcas<br />
      que se pueden habitar.
    </h1>
    <h2 class="text-xl md:text-2xl text-gray-600 mb-12 font-medium">
      Espacios que se pueden sentir.
    </h2>
    
    <div>
      <button class="border-2 border-orange-300 bg-transparent text-orange-300 px-8 py-3 rounded-none text-sm font-medium uppercase tracking-wider hover:bg-orange-300 hover:text-white transition-all duration-300">
        Agendar reunión
      </button>
    </div>
  </div>
  
  <!-- Gradient overlay -->
  <!-- <div class="absolute inset-0 bg-gradient-to-b from-white/20 via-transparent to-white/60" /> -->
</section>
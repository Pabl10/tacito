---
import { Image } from "astro:assets";
---

<section class="py-24 px-6">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="font-serif text-3xl md:text-[40px] font-light text-gray-800 mb-8">
        Universos que hemos diseñado
      </h2>
    </div>
    
    <div class="relative group">
      <Image 
        src="/tacito/assets/portfolio-grid.jpg" 
        alt="Portfolio de proyectos integrales"
        class="w-full h-auto rounded-sm shadow-2xl"
        width={1000}
        height={1000}
      />
      <div class="absolute inset-0 bg-gradient-to-t from-primary/10 to-transparent opacity-0 group-hover:opacity-100 smooth-transition" />
    </div>
    
    {/* Project highlights */}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-16">
      <div class="text-center">
        <h3 class="font-light text-lg text-orange-700 mb-2">Restaurante Alma</h3>
        <p class="font-body text-sm text-gray-600">Branding + Interiorismo + Narrativa Gastronómica</p>
      </div>
      <div class="text-center">
        <h3 class="font-light text-lg text-orange-700 mb-2">Hotel Esencia</h3>
        <p class="font-body text-sm text-gray-600">Identidad Completa + Arquitectura de Experiencias</p>
      </div>
      <div class="text-center">
        <h3 class="font-light text-lg text-orange-700 mb-2">Estudio Lumen</h3>
        <p class="font-body text-sm text-gray-600">Marca Personal + Espacio de Trabajo Conceptual</p>
      </div>
    </div>
  </div>
</section>
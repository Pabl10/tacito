---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
---

<Layout 
  title="Contacto - TÁCITO Estudio de Diseño"
  description="Contáctanos para transformar tu visión en una experiencia memorable. Especialistas en branding emocional, diseño espacial y cápsulas de identidad. Inicia tu proyecto con nosotros."
>
  <Header />
  
  <div class="min-h-screen bg-white">
    <!-- Hero Section -->
    <section class="py-20 px-6">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Back Button -->
        <div class="text-left mb-8">
          <a href="/" class="inline-flex items-center text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors uppercase tracking-wide">
            ← VOLVER AL INICIO
          </a>
        </div>
        
        <h1 class="text-4xl md:text-6xl font-serif text-gray-800 mb-8 font-light leading-tight">
          Conversemos
        </h1>
        <p class="text-xl md:text-2xl text-gray-600 mb-12 font-light">
          Estamos aquí para transformar tu visión en una experiencia memorable.
        </p>
        <div class="w-24 h-1 bg-orange-300 mx-auto"></div>
      </div>
    </section>

    <!-- Contact Form Section -->
    <section class="py-16 px-6 bg-gray-50">
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
          <!-- Contact Form -->
          <div class="bg-white p-8 rounded-lg shadow-sm">
            <h2 class="text-2xl font-serif text-gray-800 mb-6 font-light">Envíanos un mensaje</h2>
            <form class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Nombre</label>
                  <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    class="w-full px-4 py-3 border border-gray-300 rounded-none focus:outline-none focus:border-orange-300 transition-colors"
                    required
                  />
                </div>
                <div>
                  <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                  <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    class="w-full px-4 py-3 border border-gray-300 rounded-none focus:outline-none focus:border-orange-300 transition-colors"
                    required
                  />
                </div>
              </div>
              <div>
                <label for="company" class="block text-sm font-medium text-gray-700 mb-2">Empresa</label>
                <input 
                  type="text" 
                  id="company" 
                  name="company" 
                  class="w-full px-4 py-3 border border-gray-300 rounded-none focus:outline-none focus:border-orange-300 transition-colors"
                />
              </div>
              <div>
                <label for="service" class="block text-sm font-medium text-gray-700 mb-2">Servicio de interés</label>
                <select 
                  id="service" 
                  name="service" 
                  class="w-full px-4 py-3 border border-gray-300 rounded-none focus:outline-none focus:border-orange-300 transition-colors"
                >
                  <option value="">Selecciona un servicio</option>
                  <option value="branding">Branding Emocional + Conceptual</option>
                  <option value="espacial">Diseño Espacial de Marca</option>
                  <option value="capsulas">Cápsulas de Identidad</option>
                  <option value="otro">Otro</option>
                </select>
              </div>
              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-2">Mensaje</label>
                <textarea 
                  id="message" 
                  name="message" 
                  rows="6" 
                  class="w-full px-4 py-3 border border-gray-300 rounded-none focus:outline-none focus:border-orange-300 transition-colors resize-none"
                  placeholder="Cuéntanos sobre tu proyecto..."
                  required
                ></textarea>
              </div>
              <button 
                type="submit" 
                class="w-full bg-gray-900 text-white px-8 py-4 text-sm font-medium uppercase tracking-wider hover:bg-gray-800 transition-colors"
              >
                Enviar Mensaje
              </button>
            </form>
          </div>

          <!-- Contact Information -->
          <div class="space-y-8">
            <div>
              <h2 class="text-2xl font-serif text-gray-800 mb-6 font-light">Información de Contacto</h2>
              <div class="space-y-4">
                <div class="flex items-start">
                  <div class="w-6 h-6 bg-orange-300 rounded-full mr-4 mt-1"></div>
                  <div>
                    <h3 class="font-medium text-gray-800">Email</h3>
                    <p class="text-gray-600">hola@tacito.com</p>
                  </div>
                </div>
                <div class="flex items-start">
                  <div class="w-6 h-6 bg-orange-300 rounded-full mr-4 mt-1"></div>
                  <div>
                    <h3 class="font-medium text-gray-800">Teléfono</h3>
                    <p class="text-gray-600">+52 (55) 1234-5678</p>
                  </div>
                </div>
                <div class="flex items-start">
                  <div class="w-6 h-6 bg-orange-300 rounded-full mr-4 mt-1"></div>
                  <div>
                    <h3 class="font-medium text-gray-800">Ubicación</h3>
                    <p class="text-gray-600">Ciudad de México, México</p>
                  </div>
                </div>
              </div>
            </div>

            <div>
              <h3 class="text-xl font-serif text-gray-800 mb-4 font-light">Síguenos</h3>
              <div class="flex space-x-4">

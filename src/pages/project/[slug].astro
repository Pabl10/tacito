---
import Layout from '../../layouts/Layout.astro';
import projects from '../../data/projects.json';
import { navLink, projectImageUrl } from '../../utils/paths';

// Type definitions for sections
interface FullWidthSection {
  type: 'full-width';
  image: string;
  description?: string;
  details?: {
    title: string;
    description: string;
  }[];
}

interface Grid2Section {
  type: 'grid-2';
  images: string[];
}

interface Gallery3Section {
  type: 'gallery-3';
  images: string[];
}

type Section = FullWidthSection | Grid2Section | Gallery3Section;

// Get the project slug from the URL params
export async function getStaticPaths() {
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { slug } = Astro.params;
const project = projects.find(p => p.slug === slug);

// Redirect to home if project not found
if (!project) {
  return Astro.redirect('/');
}
---

<Layout 
  title={`${project.title} - ${project.brand} | TÁCITO Portfolio`}
  description={`Explora el proyecto ${project.title} para ${project.brand}. Caso de estudio completo de branding, diseño espacial e identidad visual. Descubre nuestro proceso creativo y resultados finales.`}
>
  <div class="min-h-screen bg-white">
    <!-- Header Section -->
    <header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-gray-200">
      <div class="flex justify-between items-center px-6 py-4">
        <!-- Back Button -->
        <a href={navLink("/proyectos")} class="text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors uppercase tracking-wide">
          ← VOLVER A PROYECTOS
        </a>
        
        <!-- Project Title -->
        <div class="text-center">
          <h1 class="text-xl md:text-2xl font-semibold text-gray-900 uppercase tracking-wide">{project.title}</h1>
          <p class="text-xs text-gray-600 uppercase tracking-wider">{project.brand}</p>
        </div>
        
        <!-- Empty div for balance -->
        <div class="w-20"></div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-6xl mx-auto px-6 py-8">
      <!-- Hero Section with Main Image (siempre primero) -->
      <div class="mb-12">
        <div class="relative bg-gray-50 rounded-lg overflow-hidden shadow-lg">
          <img 
            src={projectImageUrl(project.content?.main?.image || project.image)} 
            alt={project.alt}
            class="w-full h-auto block"
            loading="eager"
            decoding="sync"
          />
        </div>

        {project.content?.main?.details && (
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12 my-12 mx-16">
            {project.content.main.details.map((detail: { title: string; description: string }) => (
              <div class="mb-4 md:mb-0">
                <h2 class="text-base border-b border-gray-200 pb-2 md:text-lg font-semibold text-gray-900 mb-4 uppercase tracking-wide">
                  {detail.title}
                </h2>
                {detail.description && (
                  <p class="text-sm md:text-base text-gray-600 leading-relaxed">
                    {detail.description}
                  </p>
                )}
              </div>
            ))}
          </div>
        )}
      </div>

      <!-- Dynamic Sections -->
      {project.content?.sections && (
        <div class="space-y-12">
          {project.content.sections.map((section: any) => {
            // Full Width Section - Imagen del mismo tamaño que main con descripción
            if (section.type === 'full-width') {
              return (
                <div class="w-full">
                  <img
                    src={projectImageUrl(section.image)}
                    alt={section.description || project.alt}
                    class="w-full h-auto block rounded-lg shadow"
                    loading="lazy"
                    decoding="async"
                  />
                  {section.description && (
                    <p class="text-center text-2xl font-medium mt-4">{section.description}</p>
                  )}
                  {section.details && (
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12 my-12 mx-16">
                      {section.details.map((detail: { title: string; description: string }) => (
                        <div class="mb-4 md:mb-0">
                          <h2 class="text-base border-b border-gray-200 pb-2 md:text-lg font-semibold text-gray-900 mb-4 uppercase tracking-wide">
                            {detail.title}
                          </h2>
                          {detail.description && (
                            <p class="text-sm md:text-base text-gray-600 leading-relaxed">
                              {detail.description}
                            </p>
                          )}
                        </div>
                      ))}
                    </div>
                  )}
                </div>
              );
            }
            
            // Grid 2 Columns Section
            if (section.type === 'grid-2') {
              return (
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  {section.images.map((img: string) => (
                    <img
                      src={projectImageUrl(img)}
                      alt={project.alt}
                      class="w-full h-auto block rounded-lg shadow"
                      loading="lazy"
                      decoding="async"
                    />
                  ))}
                </div>
              );
            }
            
            // Gallery 3 Columns Section (Six Pack)
            if (section.type === 'gallery-3') {
              return (
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
                  {section.images.map((img: string) => (
                    <img
                      src={projectImageUrl(img)}
                      alt={project.alt}
                      class="w-full h-[300px] object-cover block rounded-lg shadow"
                      loading="lazy"
                      decoding="async"
                    />
                  ))}
                </div>
              );
            }
            
            return null;
          })}
        </div>
      )}

      <!-- Project Details -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-12 pt-8 border-t border-gray-200">
        <div>
          <h4 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-2">CLIENT</h4>
          <p class="text-gray-600">{project.client}</p>
        </div>
        <div>
          <h4 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-2">SERVICES</h4>
          <p class="text-gray-600">{project.services}</p>
        </div>
        <div>
          <h4 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-2">YEAR</h4>
          <p class="text-gray-600">{project.year}</p>
        </div>
      </div>
    </main>

    <!-- Back to Projects Button -->
    <div class="max-w-6xl mx-auto px-6 pb-12">
      <a 
        href={navLink("/proyectos")} 
        class="inline-flex items-center text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors uppercase tracking-wide"
      >
        ← VER TODOS LOS PROYECTOS
      </a>
    </div>
  </div>
</Layout>

---
import Layout from '../../layouts/Layout.astro';
import projects from '../../data/projects.json';
import { navLink, projectImageUrl } from '../../utils/paths';

// Get the project slug from the URL params
export async function getStaticPaths() {
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { slug } = Astro.params;
const project = projects.find(p => p.slug === slug);

// Redirect to home if project not found
if (!project) {
  return Astro.redirect('/');
}
---

<Layout 
  title={`${project.title} - ${project.brand} | TÁCITO Portfolio`}
  description={`Explora el proyecto ${project.title} para ${project.brand}. Caso de estudio completo de branding, diseño espacial e identidad visual. Descubre nuestro proceso creativo y resultados finales.`}
>
  <div class="min-h-screen bg-white">
    <!-- Header Section -->
    <header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-gray-200">
      <div class="flex justify-between items-center px-6 py-4">
        <!-- Back Button -->
        <a href={navLink("/proyectos")} class="text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors uppercase tracking-wide">
          ← VOLVER A PROYECTOS
        </a>
        
        <!-- Project Title -->
        <div class="text-center">
          <h1 class="text-xl md:text-2xl font-semibold text-gray-900 uppercase tracking-wide">{project.title}</h1>
          <p class="text-xs text-gray-600 uppercase tracking-wider">{project.brand}</p>
        </div>
        
        <!-- Empty div for balance -->
        <div class="w-20"></div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-6xl mx-auto px-6 py-8">
      <!-- Hero Section with Project Image -->
      <div class="mb-12">
        <div class="relative bg-gray-50 rounded-lg overflow-hidden shadow-lg">
          <img 
            src={projectImageUrl(project.image)} 
            alt={project.alt}
            class="w-full h-auto block"
            loading="eager"
            decoding="sync"
          />
        </div>

        {project.configuration_images?.main_image?.details && (
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12 my-12 mx-16">
            {project.configuration_images.main_image.details.map((detail: { title: string; description: string }) => (
              <div class="mb-4 md:mb-0">
                <h2 class="text-base border-b border-gray-200 pb-2 md:text-lg font-semibold text-gray-900 mb-4 uppercase tracking-wide">
                  {detail.title}
                </h2>
                {
                  detail.description && (
                    <p class="text-sm md:text-base text-gray-600 leading-relaxed">
                      {detail.description}
                    </p>
                  )
                }
              </div>
            ))}
          </div>
        )}
      </div>

      <!-- Information Section - Dynamic from configuration_images -->
      <div>
        <!-- Configuración de imágenes -->
        {project.configuration_images?.details_images && (
          <div class="mb-12">
            <!-- Details Images -->
            {project.configuration_images.details_images.length > 0 && (
              <div class="grid grid-cols-1 md:grid-cols-1 gap-6 mb-[45px] w-full">
                {project.configuration_images.details_images.map((img: { image: string; description: string }) => (
                  <img
                    src={projectImageUrl(img.image)}
                    alt={img.description}
                    class="w-full h-auto block rounded-lg shadow"
                    loading="lazy"
                    decoding="async"
                  />
                  <p class="text-center text-2xl font-medium">{img.description}</p>
                ))}
              </div>
            )}

            <!-- Secondary & Tertiary Images (2 columns) -->
            {project.configuration_images.secondary_image && project.configuration_images.tertiary_image && (
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-[45px]">
                <img
                  src={projectImageUrl(project.configuration_images.secondary_image)}
                  alt={project.alt}
                  class="w-full h-auto block rounded-lg shadow"
                  loading="lazy"
                  decoding="async"
                />
                <img
                  src={projectImageUrl(project.configuration_images.tertiary_image)}
                  alt={project.alt}
                  class="w-full h-auto block rounded-lg shadow"
                  loading="lazy"
                  decoding="async"
                />
              </div>
            )}

            <!-- Galería de imágenes -->
            {project.configuration_images.gallery_images && (
              <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
                {project.configuration_images.gallery_images?.map((img: string) => (
                  <img
                    src={projectImageUrl(img)}
                    alt={project.alt}
                    class="w-full h-[300px] block rounded-lg shadow"
                    loading="lazy"
                  />
                ))}
              </div>
            )}
          </div>
        )}

        <!-- Project Details -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-12 pt-8 border-t border-gray-200">
          <div>
            <h4 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-2">CLIENT</h4>
            <p class="text-gray-600">{project.title}</p>
          </div>
          <div>
            <h4 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-2">SERVICES</h4>
            <p class="text-gray-600">{project.brand}</p>
          </div>
          <div>
            <h4 class="text-sm font-semibold text-gray-900 uppercase tracking-wider mb-2">YEAR</h4>
            <p class="text-gray-600">2024</p>
          </div>
        </div>
      </div>
    </main>

    <!-- Back to Projects Button -->
    <div class="max-w-6xl mx-auto px-6 pb-12">
      <a 
        href={navLink("/proyectos")} 
        class="inline-flex items-center text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors uppercase tracking-wide"
      >
        ← VER TODOS LOS PROYECTOS
      </a>
    </div>
  </div>
</Layout> 